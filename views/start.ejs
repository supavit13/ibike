<script>
    var unlockSuccess = false;
    $(".slideUnlock").slideToUnlock({
        height : 50,
        width : 200,
        bgColor: "#ff0000",
        textColor : "#000",
		succColor : '#00ff00',        
        progressColor : "#ffff00",
        succTextColor : '#000',
        successFunc: function () {
            unlockSuccess = true;
            $("#start").attr("style","");
        }
    });
    function cancalBooking() {
        $.ajax({
            type: "POST",
            url: "/morcyc/turnoff",
            data: {
                '_token': $('input[name=_token]').val()
            },
            success: function (data) {
                if (data) {
                    window.location.replace("/showbike");
                } else {
                    swal(data);
                }
            }
        });
    }
