                                <b>ปริมาณออกซิเจน : </b>
                                <font color="green">
                                    <i class="checkmark icon"></i>
                                </font>
                            </p>
                        </td>
                        <td>
                            <% if(morcyc['status']!=null) { %>
                                <p>
                                    <b>Report by : </b>
                                    <%= morcyc['status']['userId'] %>
                                </p>
                                <p>
                                    <b>Brake light : </b>
                                    <%= morcyc['status']['BrakeLight'] %>
                                </p>
                                <p>
                                    <b>Tire : </b>
                                    <%= morcyc['status']['Tire'] %>
                                </p>
                                <p>
                                    <b>Dial : </b>
                                    <%= morcyc['status']['Dial'] %>
                                </p>
                                <p>
                                    <b>Brake : </b>
                                    <%= morcyc['status']['Brake'] %>
                                </p>
                                <p>
                                    <b>Turn Signal : </b>
                                    <%= morcyc['status']['TurnSignal'] %>
                                </p>
                                <p>
                                    <b>Headlight : </b>
                                    <%= morcyc['status']['Headlight'] %>
                                </p>
                                <p>
                                    <b>Gasoline : </b>
                                    <%= morcyc['status']['Gasoline'] %>
                                </p>
                                <p>
                                    <b>Horns : </b>
                                    <%= morcyc['status']['Horns'] %>
                                </p>
                                <p>
                                    <b>Detail : </b>
                                    <%= morcyc['status']['Detail'] %>
                                </p>
                                <% } %>
                        </td>
                        <td>
                            <% for(var i=0;i<30&&morcyc['history']!=null;i++) { %>
                                <p>
                                    <%= morcyc['history'][i] %>
                                </p>
                                <% } %>
                        </td>
                    </tr>
                </tbody>
            </table>

